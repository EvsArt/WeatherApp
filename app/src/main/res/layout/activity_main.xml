<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/tajawal_bold"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/logo"
        android:textSize="30sp"
        android:typeface="normal" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginHorizontal="100sp"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:hint="@string/input"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColorHint="@color/hint"
        android:fontFamily="@font/tajawal_bold"
        android:textStyle="bold"
        android:autofillHints="city"/>

    <Button
        android:id="@+id/MainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="130sp"
        android:fontFamily="@font/tajawal_bold"
        android:text="@string/MainButton"/>

    <TextView
        android:id="@+id/ResultOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/tajawal_bold"
        android:layout_below="@+id/MainButton"
        android:textAlignment="center"
        android:textColor="@color/ResultWeather"
        android:textSize="25sp"
        android:typeface="normal" />

</RelativeLayout>